<!DOCTYPE html>
<html lang="es">

  <%- include("../partials/head")%>

<body>

  <%- include("../partials/header")%>

<main>

<div class="dashboard-admin-content d-flex flex-column align-items-center">
  <h1 class="text-Dark my-4 d-flex">Crear Producto</h1>
  <a href="/admin/lista-de-productos" class="btn btn-dark mb-2 col-3 d-flex justify-content-center">Volver al listado</a>
</div>

    <div class="card  container mb-4" style="width: 40rem;">
    
    <form action="/admin/crear-producto" method="post" enctype="multipart/form-data" class="row">
      <div class=" col-12">
        <label for="text" class="form-label"></label>
        <input type="text" class="form-control" name="title" placeholder="Titulo" value="" id="title">
        <p class="text-danger fs-6 error-title"> <%= locals.errors?.title?.msg %></p>
      </div>

      <div class="mb-3 col-6">
        <label for="precio" class="form-label"></label>
        <input type="number" class="form-control" id="" name="price" placeholder="Precio" value="" id="price"/>
        <p class="text-danger fs-6 error-price"><%= locals.errors?.price?.msg %></p>
      </div>

      <div class="mb-3 col-6">
        <label for="Descuento" class="form-label"></label>
        <input type="number" class="form-control" id="" name="discount" placeholder="Descuento" value="" >
        <p class="text-danger fs-6 error-discount"><%= locals.errors?.discount?.msg %></p> 
      </div>

      <div class="mb-3 form-floating col-6 p-1">
        <select class="form-select" id="floatingSelect" aria-label="Selecciona Categoria" name="category" value="" >
          <option selected hidden>Selecciona Categoría</option>

          <% category.forEach((c) => { %>
           <option  value="<%= c.id %>"><%= c.name %></option>
          <% }) %>
          
        </select>
        <label for="floatingSelect">Desplegar las opciones</label>
      </div>

      <div class="mb-2  p-1 form-floating col-6">
        <textarea class="form-control" placeholder="Leave a comment here" name="description" id="floatingTextarea" value="" ></textarea>
        <label for="floatingTextarea">Descripción</label>
        <p class="text-danger fs-6 error-description"><%= locals.errors?.description?.msg %></p>
      </div>

      <div class="mb-3 col-12">
        <label for="formFileMultiple" class="form-label">Agregar o modificar imagenes</label>
        <input class="form-control" type="file" name="img" id="formFileMultiple" multiple>
        <p class="text-danger fs-6 error-image"><%= locals.errors?.imagePrincipal?.msg %></p>
      </div>

      <div class="mb-2  form-check form-switch col-3 ">
        <input class="form-check-input" type="checkbox" id="available" name="available" checked>
        <label class="form-check-label" for="available" >Disponible</label>
      </div>

      <button type="submit" class="btn btn-dark col-4 mb-3 mt-3 mx-2">Crear producto</button>
      <button type="submit" class="btn btn-danger col-4 mb-3 mt-3"> <a href="/"> Cancelar</button>
    </form>
  </div>

  <%- include("../partials/footer")%>

</main>




</body>

<script src="/js/functions/createProduct.js"> </script>
</html>